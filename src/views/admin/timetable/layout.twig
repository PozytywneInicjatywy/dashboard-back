{% extends '@admin/layout.twig' %}

{% set title = 'Plany lekcji' %}
{% set active = 'timetable' %}

{% block content %}
    <div class="d-flex align-items-baseline mb-4">
        <h2 class="h3 mr-auto">{% block timetableTitle %}Plany lekcji{% endblock %}</h2>
        {% block timetableMenu '' %}
        <div class="btn-group ml-3">
            <a href="{{ path('admin.timetable.home') }}" class="btn btn-{{ activeTab == 'timetables' ? 'primary' : 'light' }}">Plany lekcji</a>
            <a href="{{ path('admin.timetable.class.list') }}" class="btn btn-{{ activeTab == 'classes' ? 'primary' : 'light' }}">Klasy</a>
            <a href="{{ path('admin.timetable.subject.list') }}" class="btn btn-{{ activeTab == 'subjects' ? 'primary' : 'light' }}">Przedmioty</a>
            <a href="#" class="btn btn-{{ activeTab == 'lesson hours' ? 'primary' : 'light' }}">Godziny lekcyjne</a>
        </div>
    </div>
    {% for message in app.flashes('messages.success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('messages.error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    {% block timetableContent '' %}
{% endblock %}
