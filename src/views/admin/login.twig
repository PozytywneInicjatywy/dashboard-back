{% extends '@admin/layout.twig' %}

{% block head %}
    <style>
        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card card-body col-4">
        <h2 class="h3 mb-4">Zaloguj się</h2>
        <form action="{{ path('admin.security.loginCheck') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrfToken }}">
            {% if error %}
                <div class="alert alert-danger">
                    <p><b>Podano błędne dane.</b></p>
                    <p class="mb-0">Jeżeli chcesz ubiegać się o dostęp, skontaktuj się z administratorem daszbordów.</p>
                </div>
            {% endif %}
            <div class="form-group">
                <label for="username">Nazwa użytkownika lub adres email</label>
                <input type="text" id="username" name="username" class="form-control" value="{{ lastUsername|default }}" autofocus required>
            </div>
            <div class="form-group">
                <label for="password">Hasło</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <input type="submit" value="Zaloguj się" class="btn btn-primary">
        </form>
    </div>
{% endblock %}
